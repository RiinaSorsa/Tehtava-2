const puhelin = require(readline-sync);

let henkilot = [{nimi: "Aku Ankka", puhelinnumero:434234},{nimi: Hessu Hopo", puhelinnumero:3242342}];

function uusihenkilo() {
    puhelin.question("Anna henkilon nimi: ", (nimi)=> {
    puhelin.question("Anna henkilon puhelinnumero", (puhelinnumero) => {
    const henkilo = {nimi, puhelinnumero};
    henkilot.push(henkilo);
        });
    });
}

